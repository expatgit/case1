{% extends 'admin/adminorigin.html.twig' %}

{% block body %}

    <div class="container-xl">
        <div class="row no-gutters">
            <div class="col-12 text-center">
                <h1 class="mt-5">
                    {{ title }}  {{ app.user.username }}
                </h1>

            </div>
        </div>
    </div>
    <div class="container-xl" id="main">
        <div class="row mt-5">

            <div class="col-4 text-center border-right bg">
                <div class="mt-3">
                    <h4>
                        Меню администратора
                    </h4>
                </div>
                <br><br>
                <div class="dropdown mt-1">
                    <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Назад
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" href="{{ path('admin_home') }}">Панель управления</a></li>
                        <li><a class="dropdown-item" href="{{ path('index') }}">Главная страница</a></li>

                    </ul>
                </div>
                <div class="dropdown mt-1">
                    <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Пользователи
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" href="{{ path('admin_user') }}">Список пользователей</a></li>
                        <li><a class="dropdown-item" href="{{ path('admin_user_create') }}">Добавить пользователя</a></li>

                    </ul>
                </div>
                <div class="dropdown mt-1">
                    <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Задачи
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" href="{{ path('admin_task') }}">Список задач</a></li>
                        <li><a class="dropdown-item" href="{{ path('admin_task_add') }}">Добавить задачу</a></li>

                    </ul>
                </div>

            </div>
            <div class="col-8">

                <h2>Список задач</h2>
                <ul>
                    {% for task_unit in task %}
                        <ul><b>{{ task_unit.id }}.
                                {{ task_unit.title }}:</b><br> {{ task_unit.text }}</ul><br>
                    {% endfor %}
                </ul>

            </div>
        </div>

    </div>

{% endblock %}
